{
  "name": "solcalc",
  "displayName": "SolCalc",
  "description": "A developer utility for safely performing mixed-decimal arithmetic during Solidity development and smart contract audits.",
  "version": "0.1.0",
  "publisher": "keepitfortoby",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/32bits-toby/sol-calc"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "solidity",
    "calculator",
    "audit",
    "defi",
    "decimal"
  ],
  "activationEvents": [
    "onView:solcalc.calculatorView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "solcalc",
          "title": "SolCalc",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "solcalc": [
        {
          "type": "webview",
          "id": "solcalc.calculatorView",
          "name": "Calculator"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@solcalc/core": "file:../core"
  }
}
